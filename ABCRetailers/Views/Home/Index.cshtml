    .product-card,
    .contact-card {
        transition: all 0.3s ease;
        border-radius: 12px !important;
    }

        .product-card:hover,
        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
        }

    .contact-icon {
        transition: transform 0.3s ease;
    }

    .contact-card:hover .contact-icon {
